CONT_NAME=tensorflow-gpu
CONT_FILTER=$(docker container ls -q -f name=$CONT_NAME)
V_MOUNT=/home/python

if [ "$CONT_FILTER" != "" ]; then
   docker kill $CONT_NAME
fi

sleep 0.5

docker run --name $CONT_NAME -v ${PWD}/:$V_MOUNT -it --rm -d tensorflow/tensorflow:latest-gpu  \
   bash -c "
   cd $V_MOUNT &&
   pip install -r requirements.txt &&
   sleep infinity"